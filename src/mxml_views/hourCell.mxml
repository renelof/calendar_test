	width="720" 
	height="50" 
	backgroundColor="#FFFFFF" 
	xmlns:mxmlViews="mxml_views.*">
	<mx:Button x="0" y="0" width="100%" height="50%" styleName="btnDayItems" id="btnFirstHalf"/>
	<mx:Button x="0" width="100%" styleName="btnDayItems" bottom="0" height="25" id="btnSecondHalf"/>
	<mx:HRule x="0" top="25" strokeWidth="1" width="100%" strokeColor="#ECECEC"/>
	<mx:HRule x="0" width="100%" strokeColor="#88C4EE" bottom="0" strokeWidth="1"/>	
</mx:Canvas>

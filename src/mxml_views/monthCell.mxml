		<mx:Label width="90" height="16" id="lblDate" color="#FFFFFF" fontWeight="bold" styleName="lblHours"/>
	</mx:ApplicationControlBar>
	<mx:TextArea id="txtDesc" x="3" y="28" width="95%" height="70%" borderColor="#7FC4FF"
				 editable="false" selectable="false" styleName="txtArea"/>

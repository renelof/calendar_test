	xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="115" 
	height="112" 
	styleName="canDayCellBase"
	backgroundColor="#7FC4FF">
	<mx:ApplicationControlBar id="canHeader" x="0" y="-3" width="100%" height="22"
